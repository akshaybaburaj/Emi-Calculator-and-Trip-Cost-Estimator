<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="112dp"
        android:layout_y="90dp"
        android:ems="10"
        android:hint="Enter Distance To Travel"
        android:inputType="number" />

    <EditText
        android:id="@+id/etPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="112dp"
        android:layout_y="202dp"
        android:ems="10"
        android:hint="Enter Price Per Litre"
        android:inputType="number" />

    <EditText
        android:id="@+id/etMileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="112dp"
        android:layout_y="316dp"
        android:ems="10"
        android:hint="Enter Mileage"
        android:inputType="number" />

    <EditText
        android:id="@+id/ctCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="112dp"
        android:layout_y="607dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="336dp"
        android:text="Mileage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="214dp"
        android:text="Petrol Price " />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_x="52dp"
        android:layout_y="623dp"
        android:text="Cost " />

    <TextView
        android:id="@+id/vtprinci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="101dp"
        android:text="Distance" />

    <Button
        android:id="@+id/btCost"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="457dp"
        android:onClick="calCost"
        android:text="Calculate " />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="-8dp"
        android:layout_y="-12dp"
        app:srcCompat="@drawable/tcest" />

</AbsoluteLayout>
